#!/bin/bash
# FlyWay Checksum Brute-Force Tool
# Usage: ./brute-force <original.sql> [modified.sql] [--verbose]

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
JAR_FILE="$SCRIPT_DIR/build/libs/brute-force-1.0-SNAPSHOT.jar"

if [ ! -f "$JAR_FILE" ]; then
    echo "Error: JAR file not found. Please run: ./gradlew build"
    exit 1
fi

exec java --add-opens java.base/java.util.zip=ALL-UNNAMED -jar "$JAR_FILE" "$@"

